/* 轮播图的高度最高是300rpx */
.indexContainer .bannerSwiper .swiperItem .swiperImg {
  width: 100%;
  height: 300rpx;
}

.indexContainer .navList {
  display: flex;
  justify-content: space-around;
}

.indexContainer .navList .navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.indexContainer .navList .navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: wheat;
  font-size: 50rpx;
}

.indexContainer .navList .navItem .navText {
  font-size: 28rpx;
}

/* 推荐歌曲样式 */
.indexContainer .recommend {
  padding: 20rpx;
}

.header .title {
  color: #aaa;
  line-height: 80rpx;
}

.header .headerText {
  display: flex;
  justify-content: space-between;
}

.header .headerText .textRight {
  font-size: 28rpx;
  border: 1rpx solid #aaa;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
}

/* scrollView 使用一定要设置高度 */
/* 本身不能使用flex，需要用enable-flex开启flex */
.indexContainer .recommend .scroll {
  display: flex;
  height: 300rpx;
}

.indexContainer .recommend .scroll .scrollItem {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.indexContainer .recommend .scroll .scrollItem .itemImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.indexContainer .recommend .scroll .scrollItem .itemText {
  width: 200rpx;
  font-size: 28rpx;
  /* 单行文本溢出... */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出... */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 排行榜样式 */
.indexContainer .rank {
  padding: 20rpx;
}

.indexContainer .rank .rankSwiper {
  height: 400rpx;
}

.indexContainer .rank .rankSwiper .swiperItem {
  height: 400rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main {
  width: 90%;
  height: 400rpx;
  background-color: #aaa;
  margin: 0 auto;
  padding: 20rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .mainTitle {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .song {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .song .songImg {
  width: 100rpx;
  height: 100rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .song .count {
  margin: 0 50rpx;
}